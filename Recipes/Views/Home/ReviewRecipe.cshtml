@model Review
@{
    ViewBag.Title = "Review Recipe";
}

<div class="panel-body">
    <form class="p-a-1" asp-action="ReviewRecipe" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group" >
            <label asp-for="UserName">User Name:</label>
            <input class="form-control" asp-for="UserName" />
            <label asp-for="Comments">Comments:</label>
            <input class="form-control" asp-for="Comments" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" style="width:400px;" type="submit">Submit your comment</button>
        </div>
    </form>
</div>