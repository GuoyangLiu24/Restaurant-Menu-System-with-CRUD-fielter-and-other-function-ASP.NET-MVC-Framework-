@model Recipe

<div class="panel-body">
    <form class="p-a-1" asp-action="AddRecipe" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Recipe Name:</label>
            <input class="form-control" asp-for="Name" />
            <label asp-for="Category">Main Ingredients:</label>
            <input class="form-control" asp-for="Category" />
            <label asp-for="Ingredients">Ingredients:</label>
            <input class="form-control" asp-for="Ingredients" />
            @*<label asp-for="Yields">Yeilds:</label>
            <input class="form-control" asp-for="Yields" />*@
            <label asp-for="Price">Total Time(minutes):</label>
            <input class="form-control" asp-for="Price" />
            @*<label asp-for="Steps">Steps:</label>
            <input class="form-control" asp-for="Steps" />*@
        </div>
        <div class="text-center">
            <button class="btn btn-primary" style="width:400px;" type="submit">Save</button>
            <br>
            <br>
            <a asp-action="Index" style="width:400px;" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>