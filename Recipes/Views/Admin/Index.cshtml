@model RecipeListViewModel;
@{
    ViewBag.Title = "All Recipes";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-left">Recipe Name</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var r in Model.Recipes)
    {
        <tr>
            <td class="text-left">@r.Name</td>
            <td class="text-center">
                <form asp-controller="Admin" asp-action="DeleteRecipe" method="post">
                    <a asp-action="EditRecipe" class="btn btn-sm btn-warning" asp-route-RecipeID="@r.RecipeID   ">Edit</a>
                    <input type="hidden" name="RecipeID" value="@r.RecipeID" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

<div page-model="@Model.PagingInfo"
     page-action="Index"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-secondary"
     page-class-selected="btn-primary"></div>

<div class="text-center">
    <a asp-controller="Admin" asp-action="CreateRecipe" class="btn btn-primary">Add Recipe</a>
</div>
