@model Recipe

@{
    ViewBag.Title = "Edit Recipe";
    Layout = "_AdminLayout";
}

<form asp-controller="Admin" asp-action="EditRecipe" method="post">
    <input type="hidden" asp-for="RecipeID" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <textarea asp-for="Category" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <div><span asp-validation-for="Ingredients" class="text-danger"></span></div>
        <input asp-for="Ingredients" class="form-control" />
    </div>

    @*<div class="form-group">
        <label asp-for="Steps"></label>
        <div><span asp-validation-for="Steps" class="text-danger"></span></div>
        <input asp-for="Steps" class="form-control" />
    </div>*@

    @*<div class="form-group">
        <label asp-for="Yields"></label>
        <div><span asp-validation-for="Yields" class="text-danger"></span></div>
        <input asp-for="Yields" class="form-control" />
    </div>*@

    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
